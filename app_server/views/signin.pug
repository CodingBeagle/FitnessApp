extends layout

block content
	.row.col-6
		h1 Login and signup
	.row.col-6
		p New users can write their desired username to create a new user
		p Old users can fill in their username and press login to see your existing workouts
	
	.row
		.col-md-3.box-shadow
			h2 Login
			form(action='/Login' method='post')
				h5 Username:
				input(type='text' class='btn-space form-control' style="color:black" name='username' required)
				br
				input(type='submit' class='btn btn-success' value='Log in')
				.bg-danger.text-white
					p #{LoginErrorMessage}

		.col-md-3.box-shadow
			h2 Sign up
			form(action='/CreateUser' method='post')
				h5 Username: 
				input(type='text' class='btn-space form-control' style="color:black" name='username' required)
				br
				input(type='submit' class='btn btn-success' value='Create User')
